{
  "name": "lightue",
  "version": "0.2.7",
  "description": "A lightweight and simple model-view framework inspired by Vue.js",
  "main": "cjs.js",
  "module": "lightue.js",
  "browser": "lightue.min.js",
  "scripts": {
    "build-browser": "rollup lightue.js --format iife --name 'Lightue' --file iife.js",
    "build-node": "rollup lightue.js --format cjs --file cjs.js",
    "build": "yarn build-browser && yarn build-node && node compress.js",
    "test": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smalllong/lightue.git"
  },
  "author": "Xiaolong Li",
  "license": "MIT",
  "devDependencies": {
    "director": "^1.2.8",
    "jsdom": "^19.0.0",
    "terser": "^4.6.3",
    "todomvc-app-css": "^2.4.2",
    "todomvc-common": "^1.0.5",
    "vitest": "^0.12.9"
  },
  "files": [
    "lightue.js"
  ],
  "keywords": [
    "lightue",
    "lightweight",
    "reactive",
    "state",
    "frontend",
    "framework",
    "virtual dom",
    "vdom"
  ],
  "browserslist": [
    "firefox >= 27"
  ]
}
